<resources>
    <!-- Base application theme. -->
    <style name="Theme.GreenIQ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_light</item>
        <item name="colorPrimaryVariant">@color/theme_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral</item>
        <item name="colorSecondaryVariant">@color/neutral_mild</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="myColor">@style/TEXT</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/neutral</item>
    </style>

    <style name="TEXT" format = "color">
        <item name="android:textColor">#000</item>
    </style>

    <style name="BUTTON">
        <item name="backgroundTint">#1E425E</item>
        <item name="android:textColor">#FFF</item>
        <item name="fontFamily">"sans-serif-thin"</item>
    </style>

    <style name="brown">
        <item name="android:textColor">#FFFFFF</item>
        <item name="cardBackgroundColor">@color/neutral_mild</item>
    </style>

    <style name="calendar"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize attributes here -->
        <!--        <item name="android:background">@color/black</item>-->
        <!--        <item name="android:textColorPrimary">@color/white</item>-->
                <item name="android:textColorSecondary">@color/black</item>
    </style>

    <color name="my_bar_color">#80F1E8</color>
</resources>