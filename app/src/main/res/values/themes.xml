<resources>
    <!-- Base application theme. -->
    <style name="Theme.GreenIQ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_light</item>
        <item name="colorPrimaryVariant">@color/theme_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_light</item>
        <item name="colorSecondaryVariant">@color/neutral_mild</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="myColor">@style/TEXT</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_light</item>
        <!-- text color. -->
        <item name="android:textColor">@color/white</item>
        <!-- hint color. -->
        <item name="android:textColorHint">@color/white</item>

    </style>

    <style name="SCREEN">
        <item name="android:background">@color/neutral</item>
    </style>

    <style name="TEXT" format = "color">
        <item name="android:textColor">#000</item>
    </style>



    <style name="textINPUT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/background_light</item>
    </style>

    <style name="FIELDS">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/background_light</item>
    </style>

    <style name="brown">
        <item name="android:textColor">#FFFFFF</item>
        <item name="cardBackgroundColor">@color/neutral_mild</item>
        <item name="android:backgroundTint">@color/background_light</item>
    </style>
    <style name="trans" >
        <item name="android:textColor">#C8000000</item>
        <item name="android:backgroundTint">#39A7FF</item>
    </style>

    <style name="food">
        <item name="android:textColor">#C8000000</item>
        <item name="android:backgroundTint">#88F655</item>
    </style>

    <style name="elec">
        <item name="android:textColor">#C8000000</item>
        <item name="android:backgroundTint">#FF558C</item>
    </style>

    <style name="RELATIVE">
        <item name="android:background">#9A8A9C02</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="calendar"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorSecondary">@color/neutral_mild</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:selectedWeekBackgroundColor">@color/neutral_mild</item>
    </style>

    <color name="my_bar_color">#80F1E8</color>
</resources>