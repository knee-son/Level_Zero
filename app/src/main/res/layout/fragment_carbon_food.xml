<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CarbonFoodFragment"
    android:orientation="vertical"
    style="@style/SCREEN">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RELATIVE"
        android:padding="16dp">
        <ImageView
            android:id="@+id/back3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_centerVertical="true"
            style="@style/IMAGEVIEW"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_type_of_food_you_ve_cooked"
            android:textSize="18sp"
            style="@style/TEXT"/>

        <Spinner
            style="@style/accent_card"
            android:id="@+id/typeSpinnerFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:layout_margin="7dp"
            android:padding="3dp"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/amountValueFood"
                android:hint="@string/input"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                style="@style/TEXT"/>

            <TextView
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/amountValueFood"
                android:text="@string/food_consumption_in_kg"
                android:textSize="18sp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_Food"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="15"
                app:iss_delay="0"
                app:iss_error_image="@color/neutral"
                app:iss_period="3000"
                app:iss_placeholder="@color/neutral" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/calculateButtonFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate1"
            android:layout_gravity="center"
            style="@style/brown"/>

    </LinearLayout>

</LinearLayout>