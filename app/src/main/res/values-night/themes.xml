<resources>
    <!-- Base application theme. -->
    <style name="Theme.GreenIQ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_light</item>
        <item name="colorPrimaryVariant">@color/theme_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral</item>
        <item name="colorSecondaryVariant">@color/neutral_mild</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="myColor">@style/TEXT</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">#232323</item>
    </style>

    <style name="TEXT" format = "color">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BUTTON">
        <item name="android:backgroundTint">#7F8181</item>
        <item name="android:textColor">#D3D0D0</item>
    </style>

    <style name="RELATIVE">
        <item name="android:background">#7F8181</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="IMAGEVIEW">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="brown">
        <item name="android:textColor">#FFFFFF</item>
        <item name="cardBackgroundColor">#45341A</item>
    </style>

    <style name="calendar"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize attributes here -->
<!--        <item name="android:background">@color/black</item>-->
<!--        <item name="android:textColorPrimary">@color/white</item>-->
<!--        <item name="android:textColorSecondary">@color/white</item>-->
    </style>

    <color name="my_bar_color">#4F1CC5</color>
</resources>