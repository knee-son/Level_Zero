<resources>
    <!-- Base application theme. -->
    <style name="Theme.GreenIQ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#040404E5</item>
        <item name="colorPrimaryVariant">@color/theme_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral</item>
        <item name="colorSecondaryVariant">@color/neutral_mild</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="myColor">@style/TEXT</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">#2D040404</item>
    </style>

    <style name="TEXT" format = "color">
        <item name="android:textColor">#EFD177</item>
    </style>


    <style name="textINPUT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="FIELDS">
        <item name="android:backgroundTint">#464B7A16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FIELDS2">
        <item name="android:background">#464B7A16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RELATIVE">
        <item name="android:background">#BC7F8181</item>
        <item name="itemIconTint">#241E1E</item>
    </style>

    <style name="IMAGEVIEW">
        <item name="android:tint">#FFFFFF</item>
        <item name="android:drawableTint">#FFFFFF</item>
    </style>

    <style name="brown">
        <item name="android:textColor">#FFFFFF</item>
        <item name="cardBackgroundColor">#45341A</item>
        <item name="android:backgroundTint">#FF45341A</item>
    </style>

    <style name="trans" >
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#1B3F5C</item>
    </style>

    <style name="food">
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#B7CEAC </item>
    </style>

    <style name="elec">
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#F7DFC2 </item>
    </style>

    <style name="calendar"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorSecondary">@color/background_light</item>
    </style>

    <color name="my_bar_color">#4F1CC5</color>
</resources>