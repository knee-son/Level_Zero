<resources>
    <!-- Base application theme. -->
    <style name="Theme.GreenIQ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#040404E5</item>
        <item name="colorPrimaryVariant">@color/theme_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral</item>
        <item name="colorSecondaryVariant">@color/neutral_mild</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="myColor">@style/TEXT</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/theme_dark</item>
    </style>

    <style name="TEXT" format = "color">
        <item name="android:textColor">#EFD177</item>
    </style>


    <style name="textINPUT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="FIELDS">
        <item name="android:backgroundTint">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RELATIVE">
        <item name="android:background">#7F8181</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="IMAGEVIEW">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="brown">
        <item name="android:textColor">#FFFFFF</item>
        <item name="cardBackgroundColor">#45341A</item>
    </style>

    <style name="calendar"  parent="Theme.MaterialComponents.Light.NoActionBar">
<!--        <item name="android:textColorSecondary">@color/black</item>-->
<!--        <item name="android:textColor">@color/neutral_mild</item>-->
        <item name="colorSecondary">@color/background_light</item>
    </style>

    <color name="my_bar_color">#4F1CC5</color>
</resources>